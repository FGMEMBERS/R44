<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteAG</object-name>
    <object-name>intporteAD</object-name>
    <object-name>intporteBG</object-name>
    <object-name>intporteBD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreAG</object-name>
    <object-name>intvitreAD</object-name>
    <object-name>intvitreBG</object-name>
    <object-name>intvitreBD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreAG</object-name>
    <object-name>intvitreAD</object-name>
    <object-name>intvitreBG</object-name>
    <object-name>intvitreBD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreAG</object-name>
    <object-name>intvitreAD</object-name>
    <object-name>intvitreBG</object-name>
    <object-name>intvitreBD</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>intvitres</object-name>
    <object-name>intvitreAG</object-name>
    <object-name>intvitreAD</object-name>
    <object-name>intvitreBG</object-name>
    <object-name>intvitreBD</object-name>
  </effect>

  <!-- Les siÃ¨ges -->
  <model>
    <path>Aircraft/R44/Models/Interior/seat/4seats.xml</path>
  </model>
  
   <!-- Pilote -->
  <model>
    <path>Aircraft/R44/Models/Interior/Panel/Instruments/woolthread/woolthread.xml</path>
    <offsets>
      <x-m> -4.410 </x-m>
      <y-m> 0.010 </y-m>
      <z-m> -0.407 </z-m>
    </offsets>
    <pitch-deg> 45 </pitch-deg>
  </model>
  

  <!-- Pilote -->
  <model>
      <name>pilot</name>
    <path>Aircraft/R44/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -3.640 </x-m>
      <y-m> -0.252 </y-m>
      <z-m> -0.711 </z-m>
    </offsets>
  </model>
   <animation>
        <type>select</type>
        <object-name>pilot</object-name>
        <condition>
            <property>/sim/model/r44/pilot-visible</property>
        </condition>
    </animation>    

  <!-- Copilote -->
  <model>
    <name>copilot</name>
    <path>Aircraft/R44/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -3.636 </x-m>
      <y-m>  0.252 </y-m>
      <z-m> -0.711 </z-m>
    </offsets>
  </model>
   <animation>
        <type>select</type>
        <object-name>copilot</object-name>
        <condition>
            <property>/sim/model/r44/copilot-visible</property>
        </condition>
    </animation>    

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/R44/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -4.098 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.668 </z-m>
    </offsets>
  </model>


  <!-- Ouverture/fermeture des portes -->
  <animation>
    <name>IntPorteAvantGauche</name>
    <object-name>intporteAG</object-name>
    <object-name>intvitreAG</object-name>
  </animation>

  <animation>
    <name>IntPorteAvantDroite</name>
    <object-name>intporteAD</object-name>
    <object-name>intvitreAD</object-name>
  </animation>

  <animation>
    <name>IntPorteArriereGauche</name>
    <object-name>intporteBG</object-name>
    <object-name>intvitreBG</object-name>
  </animation>

  <animation>
    <name>IntPorteArriereDroite</name>
    <object-name>intporteBD</object-name>
    <object-name>intvitreBD</object-name>
  </animation>

  <!-- Porte avant gauche -->
  <animation>
    <type>pick</type>
    <object-name>IntPorteAvantGauche</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.doorsystem.Lcrewexport();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteAvantGauche</object-name>
    <property>instrumentation/doors/Lcrew/position-norm</property>
    <factor> -80 </factor>
    <axis>
      <x1-m> -3.795 </x1-m>
      <y1-m> -0.607 </y1-m>
      <z1-m> -0.603 </z1-m>
      <x2-m> -3.631 </x2-m>
      <y2-m> -0.625 </y2-m>
      <z2-m> -0.266 </z2-m>
    </axis>
  </animation>

  <!-- Porte avant droite -->
  <animation>
    <type>pick</type>
    <object-name>IntPorteAvantDroite</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.doorsystem.Rcrewexport();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteAvantDroite</object-name>
    <property>instrumentation/doors/Rcrew/position-norm</property>
    <factor> 80 </factor>
    <axis>
      <x1-m> -3.795 </x1-m>
      <y1-m>  0.607 </y1-m>
      <z1-m> -0.603 </z1-m>
      <x2-m> -3.631 </x2-m>
      <y2-m>  0.625 </y2-m>
      <z2-m> -0.266 </z2-m>
    </axis>
  </animation>

  <!-- Porte arriere gauche -->
  <animation>
    <type>pick</type>
    <object-name>IntPorteArriereGauche</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.doorsystem.Lpassengerexport();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteArriereGauche</object-name>
    <property>instrumentation/doors/Lpassenger/position-norm</property>
    <factor> -80 </factor>
    <axis>
      <x1-m> -3.181 </x1-m>
      <y1-m> -0.646 </y1-m>
      <z1-m> -0.726 </z1-m>
      <x2-m> -3.046 </x2-m>
      <y2-m> -0.666 </y2-m>
      <z2-m> -0.346 </z2-m>
    </axis>
  </animation>

  <!-- Porte arriere droite -->
  <animation>
    <type>pick</type>
    <object-name>IntPorteArriereDroite</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>nasal</command>
        <script>doors.doorsystem.Rpassengerexport();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteArriereDroite</object-name>
    <property>instrumentation/doors/Rpassenger/position-norm</property>
    <factor> 80 </factor>
    <axis>
      <x1-m> -3.181 </x1-m>
      <y1-m>  0.646 </y1-m>
      <z1-m> -0.726 </z1-m>
      <x2-m> -3.046 </x2-m>
      <y2-m>  0.666 </y2-m>
      <z2-m> -0.346 </z2-m>
    </axis>
  </animation>

</PropertyList>
