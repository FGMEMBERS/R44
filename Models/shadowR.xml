<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>shadowR.ac</path>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadowfuselage</object-name>
    <object-name>shadowrotor</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadowfuselage</object-name>
    <object-name>shadowrotor</object-name>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basÃ© sur l'ombre du DC 3-->
  <animation>
    <name>AllShadow</name>
    <object-name>shadowfuselage</object-name>
    <object-name>shadowrotor</object-name>
  </animation>

  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>AllShadow</object-name>
    <property>/orientation/pitch-deg</property>
    <factor> -1 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>AllShadow</object-name>
    <property>/orientation/roll-deg</property>
    <factor> 1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
   <object-name>AllShadow</object-name>
   <!--<property>position/gear-agl-ft</property>-->
   <property>sim/multiplay/generic/float[2]</property>
   <factor> -1 </factor>
   <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
   </axis>
 </animation>

  <animation>
    <type>spin</type>
    <object-name>shadowrotor</object-name>
    <property>rotors/main/rpm</property>
    <center>
       <x-m> -2.219 </x-m>
       <y-m>  0.000 </y-m>
       <z-m>  0.000 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z>  1 </z>
    </axis>
  </animation>

</PropertyList>

