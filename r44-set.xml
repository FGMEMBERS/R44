<?xml version="1.0" encoding="UTF-8"?>
<!--
************************************************************************
r44 simulation config.

************************************************************************
-->

<PropertyList>

  <sim include="Nasal/views.xml">

    <description>Robinson R44 (Yasim)</description>
    <author>BARANGER Emmanuel (3D/FDM)</author>
    <status>alpha</status>
    <license>GPL v2</license>

    <flight-model>yasim</flight-model>
    <aero>r44</aero>
    <fuel-fraction>0.8</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/R44/r44-splash.png</splash-texture>
    </startup> 

    <sound>
      <path>Aircraft/R44/Sounds/r44-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/R44/Models/r44.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
      <r44>
        <state type="int">0</state>
        <engine type="float">0.0</engine>
        <rotor-step-deg type="float">-1.0</rotor-step-deg>
      </r44>
    </model>

    <help>
      <title>R44 - background and help</title>
      <line></line>
      <key>
        <name>{</name>
        <desc>Start engines</desc>
      </key>
      <key>
        <name>}</name>
        <desc>Shutdown engines</desc>
      </key>
      <key>
        <name>R</name>
        <desc>Toggle rotor brake</desc>
      </key>
      <key>
        <name>r</name>
        <desc>Apply rotor brake</desc>
      </key>
      <key>
        <name>Ctrl d</name>
        <desc>Toggle S.A.S.</desc>
      </key>
      <key>
        <name>Ctrl e</name>
        <desc>Toggle C.A.S.</desc>
      </key>
      <key>
        <name>Ctrl f</name>
        <desc>Auto hover</desc>
      </key>
    </help>

    <menubar include="Dialogs/r44-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
    <gear>
      <brake-parking>1</brake-parking>
    </gear>
    <rotor>
      <reltarget>1</reltarget>
      <maxreltorque>1</maxreltorque>
    </rotor>
  </controls>

  <instrumentation>
    <gsdi>
      <serviceable type="bool">true</serviceable>
      <enabled type="bool">true</enabled>
    </gsdi>
  </instrumentation>

  <input>
    <keyboard include="Nasal/r44-keyboard.xml"/>
  </input>

  <rotors>
    <main>
      <rpm type="double">0</rpm>
      <cone-deg type="double">0</cone-deg>
      <cone1-deg type="double">0</cone1-deg>
      <cone2-deg type="double">0</cone2-deg>
      <cone3-deg type="double">0</cone3-deg>
      <cone4-deg type="double">0</cone4-deg>
    </main>
  </rotors>

  <nasal>
    <doors>
      <file>Aircraft/R44/Nasal/doors.nas</file>
    </doors>
    <r44>
      <file>Aircraft/R44/Nasal/immat.nas</file>
      <file>Aircraft/R44/Nasal/light.nas</file>
      <file>Aircraft/R44/Nasal/r44.nas</file>
      <file>Aircraft/R44/Nasal/liveries.nas</file>
      <file>Aircraft/R44/Nasal/bladevisible.nas</file>
      <file>Aircraft/R44/Nasal/fcs-management.nas</file>
      <file>Aircraft/Generic/helicopter-fcs.nas</file>
    </r44>
  </nasal>

</PropertyList>

