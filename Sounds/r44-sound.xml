<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <fx>

    <engine>
      <name>engine-start</name>
      <mode>once</mode>
      <path>Sounds/coughing.wav</path>
      <condition>
        <greater-than>
          <property>sim/model/r44/state</property>
          <value>0</value>
        </greater-than>
      </condition>
      <volume>
        <factor>0.7</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>

    <rotor>
      <name>rotor</name>
      <mode>looped</mode>
      <path>Sounds/rotor-2blade.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>rotors/main/rpm</property>
            <value>50</value>
          </greater-than>
          <not>
            <property>sim/crashed</property>
          </not>
          <not>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>0</value>
            </equals>
          </not>
        </and>
      </condition>
      <volume>
        <property>rotors/gear/torque-sound-filtered</property>
      </volume>
      <pitch>
        <property>rotors/main/rpm</property>
        <factor>0.004255</factor>
        <offset>-0.0</offset>
        <max>2.5</max>
      </pitch>
      <position>
        <x> -1.3 </x>
        <y> 0 </y>
        <z> 3 </z>
      </position>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rotor>

    <rotor>
      <name>engine</name>
      <mode>looped</mode>
      <path>Sounds/wasp.wav</path>
      <condition>
         <and>
          <greater-than>
            <property>rotors/main/rpm</property>
            <value>50</value>
          </greater-than>
          <greater-than>
            <property>sim/model/r44/state</property>
            <value>1</value>
          </greater-than>
          <not>
            <property>sim/crashed</property>
          </not>
          <not>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>0</value>
            </equals>
          </not>
        </and>
      </condition>
      <volume>
        <property>rotors/gear/torque-sound-filtered</property>
      </volume>
      <pitch>
        <property>rotors/main/rpm</property>
        <factor>0.004255</factor>
        <offset>-0.0</offset>
        <max>1.03</max>
      </pitch>
      <position>
        <x>  0 </x>
        <y> -1 </y>
        <z>  0 </z>
      </position>
      <orientation>
        <x> -0.1 </x>
        <y> -1.0 </y>
        <z> -0.2 </z>
        <inner-angle>50</inner-angle>
        <outer-angle>100</outer-angle>
        <outer-gain>0.2</outer-gain>
      </orientation>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rotor>

    <contact>
      <name>ground contact</name>
      <mode>once</mode>
      <path>Sounds/helicopter-skid.wav</path>
      <condition>
        <or>
          <property>gear/gear[0]/wow</property>
          <property>gear/gear[1]/wow</property>
          <property>gear/gear[2]/wow</property>
          <property>gear/gear[3]/wow</property>
        </or>
      </condition>
      <max-dist>10</max-dist>
      <reference-dist>5</reference-dist>
      <volume>
        <factor>0.8</factor>
      </volume>
      <pitch>
        <factor>0.01</factor>
      </pitch>
      <max-dist>5.0</max-dist>
      <max-dist>10.0</max-dist>
      <position>
        <x>  0 </x>
        <y>  0 </y>
        <z> -2 </z>
      </position>
    </contact>

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <condition>
        <and>
          <property>velocities/airspeed-kt</property>
          <not>
            <property>sim/crashed</property>
          </not>
        </and>
      </condition>
      <max-dist>5</max-dist>
      <reference-dist>2</reference-dist>
      <volume>
        <property>/sim/model/sound/volume</property>
      </volume>
      <volume>
        <property>position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>1.0</offset>
        <min>0.1</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>velocities/airspeed-kt</property>
        <factor>0.0015</factor>
        <min>0.03</min>
        <max>0.25</max>
      </volume>
      <pitch>
        <property>velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>1.0</offset>
      </pitch>
      <max-dist>10.0</max-dist>
      <position>
        <x> -2.10 </x>
        <y>  1.50 </y>
        <z> -1.05 </z>
      </position>
    </wind>

    <crash>
      <name>intense ground contact</name>
      <mode>once</mode>
      <path>Sounds/crash.wav</path>
      <property>sim/crashed</property>
      <max-dist>50</max-dist>
      <reference-dist>20</reference-dist>
      <volume>
        <factor>1</factor>
      </volume>
      <pitch>
        <factor>0.1</factor>
      </pitch>
      <position>
        <x>  0.0 </x>
        <y>  0.0 </y>
        <z> -1.5 </z>
      </position>
    </crash>

    <alert>
      <name>rpm warning</name>
      <mode>once</mode>
      <path>Sounds/beep.wav</path>
      <condition>
        <and>
          <property>instrumentation/alerts/rpm</property>
          <less-than>
            <property>/rotors/main/rpm</property>
            <value>500</value>
          </less-than>
        </and>
      </condition>
      <max-dist>4</max-dist>
      <reference-dist>2</reference-dist>
      <volume>
        <factor>1</factor>
      </volume>
      <position>
        <x>  0.0 </x>
        <y>  0.0 </y>
        <z> -1.5 </z>
      </position>
    </alert>

    <click>
      <name>switches on</name>
      <mode>once</mode>
      <path>Sounds/click.wav</path>
      <condition>
        <property>sim/model/sound/click</property>
      </condition>
      <max-dist>2</max-dist>
      <reference-dist>1</reference-dist>
      <volume>
        <property>sim/model/sound/volume</property>
      </volume>
      <position>
        <x>  1.5 </x>
        <y>  0.0 </y>
        <z> -1.8 </z>
      </position>
    </click>

    <click>
      <name>switches off</name>
      <mode>once</mode>
      <path>Sounds/click.wav</path>
      <condition>
        <not>
          <property>sim/model/sound/click</property>
        </not>
      </condition>
      <max-dist>2</max-dist>
      <reference-dist>1</reference-dist>
      <volume>
        <property>sim/model/sound/volume</property>
      </volume>
      <position>
        <x>1.5</x>
        <y>  0.0 </y>
        <z> -1.8 </z>
      </position>
    </click>

  </fx>

</PropertyList>

